{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "100% stacked area chart: share of total arrivals by state over time",
  "title": "Share of Arrivals by State over Time",
  "width": 1000,
  "data": { "url": "data/Arrivals by State.csv" },
  "transform": [
    { "calculate": "datum['']", "as": "State" },
    { "fold": [
      "1991","1992","1993","1994","1995","1996","1997","1998","1999",
      "2000","2001","2002","2003","2004","2005","2006","2007","2008",
      "2009","2010","2011","2012","2013","2014","2015","2016","2017",
      "2018","2019","2020","2021","2022","2023","2024","2025"
    ], "as": ["Year","Arrivals"] },
    { "calculate": "toNumber(datum.Arrivals)", "as": "ArrivalsNum" },
    { "calculate": "toNumber(datum.Year)", "as": "YearNum" },
    { "aggregate": [{"op":"sum","field":"ArrivalsNum","as":"Total"}], "groupby": ["YearNum"] },
    { "calculate": "datum.Total > 0 ? datum.ArrivalsNum / datum.Total : 0", "as": "Share" }
  ],
  "mark": { "type": "area" },
  "encoding": {
    "x": { "field": "YearNum", "type": "quantitative", "title": "Year" },
    "y": { "field": "Share", "type": "quantitative", "stack": "normalize", "axis": { "format": ".0%" }, "title": "Share of Arrivals" },
    "color": { "field": "State", "type": "nominal", "legend": { "title": "State" } },
    "tooltip": [ { "field": "State" }, { "field": "YearNum", "title": "Year" }, { "field": "Share", "title": "Share", "format": ".1%" } ]
  }
}
