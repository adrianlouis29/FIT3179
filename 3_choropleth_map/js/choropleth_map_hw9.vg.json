{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "International Arrivals to Australia by Country, 2024",
  "width": 900,
  "height": 500,
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {"sphere": true},
      "mark": {"type": "geoshape", "fill": "#4f97d7"}
    },
    {
      "data": {"graticule": true},
      "mark": {"type": "geoshape", "stroke": "#b3b3b3", "strokeDash": [2, 2], "strokeWidth": 0.5}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/adrianlouis29/FIT3179/main/3_choropleth_map/data/Arrival%20data.csv"
            },
            "key": "Country",
            "fields": ["Arrivals"]
          }
        },
        {"calculate": "isValid(datum.Arrivals) ? format(datum.Arrivals, ',') : 'No data'", "as": "ArrivalsLabel"}
      ],
      "mark": {"type": "geoshape", "fill": "#ffffff", "stroke": "#ccc", "strokeWidth": 0.4},
      "encoding": {
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "ArrivalsLabel", "type": "nominal", "title": "Number of Arrivals"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/adrianlouis29/FIT3179/main/3_choropleth_map/data/Arrival%20data.csv"
            },
            "key": "Country",
            "fields": ["Arrivals"]
          }
        },
        {"filter": "isValid(datum.Arrivals) && datum.Arrivals > 0"},
        {"calculate": "format(datum.Arrivals, ',')", "as": "ArrivalsLabel"}
      ],
      "mark": {"type": "geoshape", "stroke": "#333", "strokeWidth": 0.5},
      "encoding": {
        "color": {
          "field": "Arrivals",
          "type": "quantitative",
          "scale": {"scheme": "greens", "type": "log"},
          "legend": {"title": "Number of Arrivals"}
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "ArrivalsLabel", "type": "nominal", "title": "Number of Arrivals"}
        ]
      }
    }
  ]
}