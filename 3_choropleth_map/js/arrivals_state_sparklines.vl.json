{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Small-multiple sparklines for arrivals by state (1991-2025) with a time brush",
  "facet": { "field": "State", "type": "nominal" },
  "spec": {
    "height": 90,
    "mark": { "type": "line", "interpolate": "monotone" },
    "transform": [{ "filter": { "param": "time_brush" } }],
    "encoding": {
      "x": { "field": "YearNum", "type": "quantitative", "axis": { "labelAngle": 0 } },
      "y": { "field": "ArrivalsNum", "type": "quantitative", "axis": null },
      "color": { "value": "#2c7fb8" },
      "opacity": { "value": 0.9 },
      "tooltip": [ { "field": "State" }, { "field": "YearNum" }, { "field": "ArrivalsNum", "format": "," } ]
    }
  },
  "vconcat": [
    {
      "title": "Arrivals by State - sparklines (click a line to highlight)",
      "width": "container"
    },
    {
      "height": 60,
      "mark": "line",
      "title": "Context: use brush to filter the sparklines above",
      "params": [
        { "name": "time_brush", "select": { "type": "interval", "encodings": ["x"] } }
      ],
      "transform": [
        { "calculate": "datum.State", "as": "StateName" }
      ],
      "encoding": {
        "x": { "field": "YearNum", "type": "quantitative", "axis": { "labelAngle": 0 } },
        "y": { "aggregate": "sum", "field": "ArrivalsNum", "type": "quantitative", "axis": { "title": "Total arrivals" } }
      }
    }
  ],
  "data": { "url": "data/Arrivals by State.csv" },
  "transform": [
    { "calculate": "datum['']", "as": "State" },
    { "fold": [
      "1991","1992","1993","1994","1995","1996","1997","1998","1999",
      "2000","2001","2002","2003","2004","2005","2006","2007","2008",
      "2009","2010","2011","2012","2013","2014","2015","2016","2017",
      "2018","2019","2020","2021","2022","2023","2024","2025"
    ], "as": ["Year","Arrivals"] },
    { "calculate": "toNumber(datum.Arrivals)", "as": "ArrivalsNum" },
    { "calculate": "toNumber(datum.Year)", "as": "YearNum" }
  ]
}
